<div class="container">
  <div class="login">
    <div class="login-header">
      <div class="circle">
        <img src="/assets/images/icons/png/food.png" alt="">
      </div>
    </div>
    <div class="form-container">
      <form class="" action="index.html" method="post">
        <h5 class="phrase"> Inicia Sesion!  </h5>
        {{input value=user.email placeholder="Email"}}
        {{input value=user.password placeholder="Contraseña"}}
        <button type="button"  class="waves-effect waves-light btn" {{action 'autenticate'}}> Ir </button>
      </form>
    </div>
  </div>
</div>

{{#if errorAuth}}
  <div class="alert">
    Usuario o Contraseña Incorrectos.
  </div>
{{/if}}
