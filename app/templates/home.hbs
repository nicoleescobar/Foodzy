<div class="row">
  <div class="col s12 m12 menu-header">
    <h4 class="header"> Lunch Menu </h4>
    <div class="card horizontal">
      <div class="card-image">
        <img src="assets/images/food.jpg">
      </div>
      <div class="card-stacked">
        <div class="card-content">
          <p class="phrase">Nuestra comida debería ser nuestra medicina y nuestra medicina debería ser nuestra comida.</p>
        </div>
      </div>
    </div>
  </div>
</div>

<form class="row order-form">
  <div class="col s12 m4 form">
    <div class="icon">
      <img src="/assets/images/icons/png/meat.png" alt="">
      <h5> Proteinas </h5>
    </div>

    <div class="input-field">
      <div class="question">
        {{#each menu.proteins as |protein|}}
          <p>
            <input  type="radio" name="protein" id={{protein.id}} value={{order.protein}} />
            <label for={{protein.id}}>{{protein.name}}</label>
          </p>
        {{/each}}
      </div>
    </div>
  </div>

  <div class="col s12 m4 form">
    <div class="icon">
      <img src="/assets/images/icons/png/salad.png" alt="">
      <h5> Acompañamientos </h5>
    </div>

    <div class="input-field">
      <div class="question">
        {{#each menu.accomps as |accomp|}}
          <p>
            <input type="checkbox" id={{accomp.id}} value={{accomp.name}}/>
            <label for={{accomp.id}}>{{accomp.name}}</label>
          </p>
        {{/each}}
      </div>
    </div>
  </div>

  <div class="col s12 m4 form">
    <div class="icon">
      <img src="/assets/images/icons/png/potatoes.png" alt="">
      <h5> Adicionales </h5>
    </div>

    <div class="input-field">
      <div class="question">
        {{#each menu.additions as |addition|}}
          <p>
            <input type="checkbox" id={{addition.id}} value={{addition.name}}/>
            <label for={{addition.id}}>{{addition.name}}</label>
          </p>
        {{/each}}
      </div>
    </div>
  </div>
</form>



<div class="divider"></div>
<button class="btn waves-effect waves-light pink lighten-1" type="submit" name="action" {{action "saveMenu"}}> Enviar
    <i class="material-icons right">send</i>
</button>

<div class="menu-btn">
  <div class="fixed-action-btn horizontal click-to-toggle">
    <a class="btn-floating btn-large light-blue lighten-1">
      <i class="material-icons">menu</i>
    </a>
    <ul>
      <li><a {{action "checkUser"}} class="btn-floating light-blue lighten-3">  <i class="material-icons">restaurant</i>  </a></li>
      <li><a class="btn-floating light-blue lighten-2">  <i class="material-icons">notifications_none</i>  </a></li>
      <li><a class="btn-floating light-blue lighten-1">  <i class="material-icons">playlist_add_check</i>  </a></li>
      <li><a {{action "logOut"}} class="btn-floating light-blue">            <i class="material-icons">exit_to_app</i>         </a></li>
    </ul>
  </div>
</div>
