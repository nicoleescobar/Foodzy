<div class="container">
  <div class="page-title notifications">
    <img src="/assets/images/icons/multicolor/team.svg" alt="">
    <h4> Miembros </h4>
  </div>

  <div class="toolbar">
    <button class="notifications-btn" {{action "notifyUnansweredUsers"}}>
     <img src="/assets/images/icons/multicolor/notification.svg" alt="">
     <span>Notificar</span>
    </button>
  </div>

 <table class="bordered highlight striped highlight orders" id="notificationsTable">
   <thead>
     <tr>
       <th> NÂº </th>
       <th> Nombre </th>
       <th> Email </th>
       <th> Respondio/Notificar </th>
     </tr>
   </thead>
   <tbody>
     {{#each userList as |user index|}}
     <tr>
       <td class="checks">
         {{index}}
       </td>

       <td class="username"> <span> {{user.username}} </span>  </td>
       <td> {{user.email}} </td>

       <td>
         {{#if user.responded}}
            <img src="/assets/images/icons/multicolor/done.svg" alt="">
         {{else}}
            <button class="notifications-btn" {{action "notifySingleUser" user}}>
              <img src="/assets/images/icons/multicolor/notification.svg" alt="">
            </button>
         {{/if}}
       </td>
     </tr>
     {{/each}}
   </tbody>
 </table>
</div>
