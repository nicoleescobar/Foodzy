<div class="container">
  <div class="page-title notifications">
    <img src="/assets/images/icons/multicolor/menu.svg" alt="">
    <h4> Miembros </h4>
  </div>

  <div class="toolbar">
    <button class="notifications-btn   cyan" {{action "notifyUnansweredUsers"}}>
     <img src="/assets/images/icons/multicolor/notification.svg" alt="">
     <span>Notificar a todos</span>
    </button>
  </div>

 <table class="bordered highlight striped highlight orders" id="notificationsTable">
   <thead>
     <tr>
       <th> NÂº </th>
       <th> Nombre </th>
       <th> Email </th>
       <th> Notificar </th>
     </tr>
   </thead>
   <tbody>
     {{#each userList as |user index|}}
     <tr>
       <td class="checks">
         {{index}}
       </td>

       <td class="username"> <span> {{user.username}} </span>  </td>
       <td> {{user.email}} </td>

       <td>
         {{#unless user.responded}}
            <button class="notifications-btn   cyan" {{action "notifySingleUser" user}}>
              Notificar
            </button>
         {{/unless}}
       </td>
     </tr>
     {{/each}}
   </tbody>
 </table>
</div>
