{{#if notOrdersYet}}
  <div class="noOrders">
    <img src="/assets/images/icons/linear/chef.svg" alt="">
    <div class="description">
      <h3 class="phrase"> Aun no hay ordenes disponibles.</h3>
      <span> Seras notificado cuando las ordenes esten listas. </span> <br>
      <span> Para hacerlo mas rapido {{#link-to "notify" }} notifica al equipo {{/link-to}} </span>
    </div>
  </div>
{{else}}

<div class="orders-container container">
  <div class="page-title">
    <h4> Ordenes </h4>
  </div>

  <div class="divider"></div>

  <div class="orders-tools form">
    <div class="orders-info">
      <span> <strong>Fecha:</strong> {{ordersDate}} </span>
      <span> <strong>#Sopas:</strong> {{numberSoups}} </span>
      <span> <strong>#Bebidas:</strong> {{numberDrinks}} </span>
    </div>
  </div>

  <div class="export-send-tools">
    <a class="waves-effect waves-light btn cyan" {{action "exportOrders"}}>  <i class="fa fa-file-excel-o" aria-hidden="true"></i> Exportar </a>
    <a class="btn waves-effect waves-light cyan cyan lighten-1" {{action "downloadOrdersImg"}}> <i class="fa fa-download" aria-hidden="true"></i> Descargar Imagen </a>
    <a href={{urlMessage}} target="_blank" class="btn waves-effect waves-light teal lighten-1"> <i class="fa fa-whatsapp" aria-hidden="true"></i> Enviar por WhatsApp </a>
  </div>

  <div class="table-wraper">
    <table class="bordered highlight striped orders grey lighten-5" id="ordersTable">
      <thead>
        <tr>
            <th> <strong>  Nombre          </strong>     </th>
            <th> <strong>  Proteina        </strong>     </th>
            <th> <strong>  Acompa√±amientos </strong>     </th>
            <th> <strong>  Adicionales     </strong>     </th>
        </tr>
      </thead>

      <tbody>
        {{#each orders as |order|}}
        <tr>
          <td> {{order.user.displayName}} </td>
          <td> {{order.order.protein}}</td>
          <td>
            <ul>
              {{#each order.order.accomps as |accomps|}}
                <li> {{accomps}} </li>
              {{/each}}
            </ul>
          </td>
          <td> {{order.order.addition}} </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>


{{/if}}
